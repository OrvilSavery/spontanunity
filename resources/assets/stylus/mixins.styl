hover_buttons($color)
  background lighten(saturate($color, -30%), 50%)
  border 2px solid lighten(saturate($color, -30%), 50%)
  color darken($color, 20%)
  padding 10px 20px
  transition all .2s ease-in-out
  span
    transition all .2s ease-in-out
    &.icon
      display inline-block
      overflow hidden
      width 0px
    &.text
      display inline-block
      overflow hidden
      width inherit

button_style($background, $color)
  background $background
  border 2px solid $color
  color $color
  span
    transition all .2s ease-in-out
    &.icon
      display inline-block
      overflow hidden
      width inherit
    &.text
      display inline-block
      overflow hidden
      width 0px
  &:hover
    hover_buttons($color)