.Modal
  position absolute
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  background rgba(0, 0, 0, .6)
  top 0
  transition all .5s ease-in
  display none

.Modal__content
  background white
  border-radius 5px
  overflow hidden


.Modal__heading {
  background #f2f2f2
  display block
  width 100%
  padding 10px 20px
  box-sizing border-box
  font-size 1.5em
}

.Modal__body {
  display block
  width 100%
  padding 10px 20px
  box-sizing border-box
}

.Modal__footer
  background #f2f2f2
  display block
  width 100%
  padding 10px 20px
  text-align right
  box-sizing border-box

