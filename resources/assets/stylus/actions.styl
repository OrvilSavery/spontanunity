.Actions
  list-style-type none
  padding 0
  margin 0
  box-shadow 0px 2px 5px rgba(0,0,0,.15)
  .page-wrapper &.centered
    lost-center grid_sm

.Actions__listItem
  border 1px solid #f0ebd1
  display flex
  height 54px
  align-items center
  padding 0px
  box-sizing border-box
  background white

.Actions__listItemHeading
  font-weight 200
  font-size 1.125em
  flex 2
  text-transform capitalize

.Actions__actions
  padding 0px 10px
  margin 10px 0 -10px 0
  line-height 3
  display flex
  text-align left